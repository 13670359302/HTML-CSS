.contains{
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 10rpx; 
}
/* 计算结果 */
.screen{
  background-color: #ffffff;
  text-align: right;
  width: 650rpx;
  height: 150rpx;
  line-height: 150rpx;
  padding: 0 20rpx;
  margin: 30rpx;
  border: 1px solid #ddd;
  border-radius: 3px;
}
/* 每四个一组的样式 */
.btnGroup{
  display: flex;
  flex-direction: row;
}
/* 每一个按钮 */
.item{
  margin: 5rpx;
  width: 160rpx;
  min-height: 150rpx;
  /* 阴影 */
  text-shadow: 0 1px 1px rgba(0,0,0,0.3);
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}
/* 为加强交互，使用覆盖改变样式 */
/* 控制按钮 */
.orange{
  background-color: #f78d1d;
  color: #fef4e9;
  border: 1px solid #da7c0c;
}
/* 数字按钮 */
.blue{
  background-color: #0095cd;
  color: #d9eef7;
  border:1px solid #0076a3;
}
/* 数字按钮按下 */
.button-hover-num{
  background-color: #0094cc;
  opacity: 0.7;
}
/* 控制按钮按下 */
.button-hover-other{
  background-color: red;
  opacity: 0.7;
}


